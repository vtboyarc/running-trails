<form action="/trails/<%= @trail.id %>/update" method="post">
  
  <% @all_users.each do |u| %>
    <input type="checkbox" name="users[]" value="<%= u.id %>" <%= "checked" if @trail.users.include?(u) %>>
    <%= u.name %><br>
  <% end %>
  
  <input type="name" name="caption" value="<%= @trail.trail_name %>">
  <input type="submit">
</form>

